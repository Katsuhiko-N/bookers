<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
    
    <%= f.submit 'Update Book' %>
    
    <span><%= link_to "show", book_path(@book.id) %></span>
    <span><%= link_to "back", books_path %></span>
    
<% end %>
