<h1>Books</h1>

<!--エラーが発生しているか-->
<% if @book.errors.any? %>
    <!--エラー件数カウント-->
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
        <!--エラーメッセージ抽出-->
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>


<!--自動ルーティングがおかしいので厳密に-->
<%= form_with model: @book, url: books_path, method: :post do |f| %>
    <h4 class="index">Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
    
    <%= f.submit 'Create Book' %>
<% end %>