<h1>Books</h1>

<div>
    <h4>一覧部分（仮）</h4>
    <% @books.each do |book| %>
    <!--ここから各個データはbookを使う-->
        <p>Title</p>
        <span><%= book.title %></span>
        
        <p>Body</p>
        <span><%= book.body %></span>
        
        <span><%= link_to "show", book_path(book.id) %></span>
        <span><%= link_to "edit", edit_book_path(book.id) %></span>
        <span><%= link_to "destroy", book_path(book.id), method: :delete,"data-confirm" => "本当に削除しますか？" %></span>
        
    <% end %>
</div>

<!--以下newから移植した投稿部分-->
<div>
    <h4>投稿部分（仮）</h4>
    <!--自動ルーティングがおかしいので厳密に-->
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        
        <h4>Body</h4>
        <%= f.text_area :body %>
        
        <%= f.submit 'Create Book' %>
    <% end %>
</div>
