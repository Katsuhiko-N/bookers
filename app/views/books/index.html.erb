<h1 class="page_title">Books</h1>

<div>
    <% @books.each do |book| %>
    <!--ここから各個データはbookを使う-->
    <table class="index_area">
        <tr>
            <td class="title_area"><%= book.title %></td>
            <td class="body_area"><%= book.body %></td>
            <td class="button_area">
            <%= link_to "show", book_path(book.id), class: 'button' %>
            <%= link_to "edit", edit_book_path(book.id), class: 'button' %>
            <%= link_to "destroy", book_path(book.id), method: :delete,"data-confirm" => "本当に削除しますか？", class: 'button' %></td>
        </tr>
    </table>
        
    <% end %>
</div>

<!--以下newから移植した投稿部分-->
<div>
    <h4>New book</h4>
    <!--自動ルーティングがおかしいので厳密に-->
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        
        <h4>Body</h4>
        <%= f.text_area :body %>
        
        <%= f.submit 'Create Book' %>
    <% end %>
</div>
